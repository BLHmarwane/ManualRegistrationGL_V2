root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 4

[*.{qml,js}]
indent_style = space
indent_size = 4

[*.{md,txt}]
trim_trailing_whitespace = false

[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2
